<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.potfollio">
    <!-- 읽기 퍼미션 설정(갤러리 접근) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo_round"
        android:label="PotFolio"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Potfollio"
        android:usesCleartextTraffic="true">
        <activity android:name=".S2PostActivity"></activity>
        <activity android:name=".S1PostActivity" />
        <activity android:name=".CardTransActivity" />
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".PasswordActivity" />
        <activity android:name=".PostActivity" />
        <activity android:name=".SearchPostActivity" />
        <activity android:name=".HotActivity" />
        <activity android:name=".Code_ImgActivity" />
    </application>

</manifest>
