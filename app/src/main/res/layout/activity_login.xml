<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="92dp"
        android:layout_height="105dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"

        app:srcCompat="@drawable/logo_red" />

    <TextView
        android:id="@+id/AppName_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/app_name"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:text="Pot, Folio" />

    <EditText
        android:id="@+id/edtlogId"
        android:inputType="textNoSuggestions"
        android:layout_width="245dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/roundbutton_white"
        android:hint="      ID"
        android:textSize="15dp"
        android:fontFamily="@font/notosans_medium"
        />

    <EditText
        android:id="@+id/edtLogPass"
        android:inputType="textNoSuggestions"
        android:layout_width="245dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbutton_white"
        android:hint="      Password"
        android:textSize="15dp"
        android:fontFamily="@font/notosans_medium"
        />

    <Button
        android:id="@+id/btnLog"
        android:layout_width="245dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundbutton_navy"
        android:backgroundTint="#45494A"
        android:fontFamily="@font/notosans_bold"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="15dp" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey2"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans_medium"
            android:gravity="center"
            android:text="아직 계정이 없으신가요?"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnJoin"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="null"
            android:text="회원가입"
            android:textSize="15dp"
            android:fontFamily="@font/notosnas_black"
            android:textColor="@color/point_orange"
            />
    </LinearLayout>

</LinearLayout>