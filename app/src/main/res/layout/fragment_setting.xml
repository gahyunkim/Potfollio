<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/app_name"
        android:text="Pot,Folio"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_name">

        <TextView
            android:id="@+id/Settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosans_kr_bold"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/expain_icon"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/expain_icon" />


            <Button
                android:id="@+id/explain_btn"
                android:layout_width="258dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:fontFamily="@font/notosans_kr_medium"
                android:text="이용약관"
                android:textAlignment="textStart"
                android:textSize="18sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="350dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:background="@drawable/underline_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/password_ch_icon"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/password__icon" />

            <Button
                android:id="@+id/passwordchange_btn"
                android:layout_width="257dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:fontFamily="@font/notosans_kr_medium"
                android:text="비밀번호 변경"
                android:textAlignment="textStart"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="224dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/roundbutton_navy"
            android:fontFamily="@font/notosans_bold"
            android:text="로그아웃"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>



