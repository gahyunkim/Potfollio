<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="605dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:gravity="bottom"
        app:umanoDragView="@id/main_slideLayout"
        app:umanoPanelHeight="150dp"
        app:umanoShadowHeight="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Hello"
                android:textColor="@color/grey"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/app_name"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/potfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/app_name"
                android:text="Pot,Folio"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hello"
                app:layout_constraintVertical_bias="0.0" />

            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="right"
                android:layout_marginStart="235dp"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/home_img"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:layout_gravity="right" />
            </FrameLayout>

            <TextView
                android:id="@+id/welcom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/notosans_kr_regular"
                android:lineSpacingExtra="6dp"
                android:text="Pot,Folio에 오신 여러분들 환영합니다.
                \nPot,Foilo에서는 제한없이 자신을 표현할 수 있습니다.
                \n지금부터 여러분을 Pot,Folio에 담아보세요."
                android:textColor="@color/black"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/potfolio"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/HotFolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/app_name"
                android:text="Hot Folio"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/welcom"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnhot"
                style="?android:borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosans_medium"
                android:text=".. more  >"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/HotFolio"
                app:layout_constraintTop_toBottomOf="@+id/welcom" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/main_hotfolio_img1"
                android:layout_width="235dp"
                android:layout_height="102dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="10dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toStartOf="@+id/main_hotfolio_img2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnhot"
                android:src="@drawable/sonny" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/main_hotfolio_img2"
                android:layout_width="115dp"
                android:layout_height="220dp"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/welcom"
                android:src="@drawable/sonny"
                app:riv_corner_radius="10dp"
                android:elevation="10dp"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="110dp"
                android:layout_height="102dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sonny"
                app:layout_constraintEnd_toStartOf="@+id/roundedImageView"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_hotfolio_img1"
                app:riv_corner_radius="10dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/roundedImageView"
                android:layout_width="110dp"
                android:layout_height="102dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sonny"
                app:layout_constraintEnd_toStartOf="@+id/main_hotfolio_img2"
                app:layout_constraintTop_toBottomOf="@+id/main_hotfolio_img1"
                app:riv_corner_radius="10dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/main_slideLayout"
            android:background="@drawable/round_grey1">

            <Button
                android:id="@+id/btn_toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="All Folio"
                android:fontFamily="@font/app_name"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/Widget.AppCompat.Button.Borderless"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/slide_layout1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@null"
                    android:orientation="vertical">




                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius_top_left="10dp"
                                app:riv_corner_radius_top_right="10dp"
                                android:src="@drawable/graphicdesign_1"
                                app:riv_mutate_background="true"
                                app:riv_oval="false"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="0.2"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/app_name"
                                android:layout_gravity="center"
                                android:text="Title1"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius_top_left="10dp"
                            app:riv_corner_radius_top_right="10dp"
                            android:src="@drawable/graphicdesign_2"
                            app:riv_mutate_background="true"
                            app:riv_oval="false"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="0.2"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/app_name"
                            android:layout_gravity="center"
                            android:text="Title1"/>
                    </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius_top_left="10dp"
                                app:riv_corner_radius_top_right="10dp"
                                android:src="@drawable/graphicdesign_2"
                                app:riv_mutate_background="true"
                                app:riv_oval="false"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="0.2"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/app_name"
                                android:layout_gravity="center"
                                android:text="Title3"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/slide_layout"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="@null"
                    android:orientation="vertical">



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardUseCompatPadding="true">                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius_top_left="10dp"
                                app:riv_corner_radius_top_right="10dp"
                                android:src="@drawable/_b98a07c2ee086f846f2f47f7d5e0b6b"
                                app:riv_mutate_background="true"
                                app:riv_oval="false"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="0.2"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/app_name"
                                android:layout_gravity="center"
                                android:text="Title1"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius_top_left="10dp"
                                app:riv_corner_radius_top_right="10dp"
                                android:src="@drawable/sonny"
                                app:riv_mutate_background="true"
                                app:riv_oval="false"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="0.2"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/app_name"
                                android:layout_gravity="center"
                                android:text="Title2"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        app:cardCornerRadius="20dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:scaleType="centerCrop"
                                app:riv_corner_radius_top_left="10dp"
                                app:riv_corner_radius_top_right="10dp"
                                android:src="@drawable/sonny"
                                app:riv_mutate_background="true"
                                app:riv_oval="false"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_weight="0.2"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/app_name"
                                android:layout_gravity="center"
                                android:text="Title3"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</LinearLayout>