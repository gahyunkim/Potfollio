<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey2"
    tools:context=".CardTransActivity">

    <FrameLayout
        android:id="@+id/card_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_mypage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/underline_search"
                android:fontFamily="@font/notosans_black"
                android:text="XXHYUN"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cnickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/notosans_medium"
                android:text="Game Director"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/cinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosans_kr_regular"
                android:text="안녕하세요.\n저의 Pot, Folio에 방문해주셔서 감사합니다."
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_mypage"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/csns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="pp734.k"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="#FFFFFF"
                    android:tint="#7D7D7D"
                    app:srcCompat="@drawable/sns_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_mypage"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="010.6345.6284"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="30dp"
                    android:scaleType="fitStart"
                    android:tint="#7D7D7D"
                    app:srcCompat="@drawable/call_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/round_mypage"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:text="lkeyun3301@gmail.com"
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="30dp"
                    android:tint="#7D7D7D"
                    app:srcCompat="@drawable/email_icon" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_mypage"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_app_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/app_name"
                    android:text="Pot,Folio"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/underline_card" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="300dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/underline_card" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/app_name"
            android:text="Pot,Folio"
            android:textAlignment="textEnd"
            android:textColor="#48ED5E0E"
            android:textSize="50dp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>