<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="92dp"
        android:layout_height="105dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"

        app:srcCompat="@drawable/logo_red" />

    <TextView
        android:id="@+id/AppName_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/app_name"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:text="Pot, Folio" />

    <EditText
            android:id="@+id/edtName"
            android:inputType="textNoSuggestions"
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textSize="15dp"
            android:fontFamily="@font/notosans_medium"
            android:hint="이름을 입력해주세요." />

        <EditText
            android:id="@+id/edtId"
            android:inputType="textNoSuggestions"
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/notosans_medium"
            android:hint="아이디를 입력해주세요." />

        <EditText
            android:id="@+id/edtPass"
            android:inputType="textNoSuggestions"
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/notosans_medium"
            android:hint="비밀번호를 입력해주세요." />

        <EditText
            android:id="@+id/edtRePass"
            android:inputType="textNoSuggestions"
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/notosans_medium"
            android:hint="비밀번호를 한 번 더 입력해주세요." />

        <Button
            android:id="@+id/btnSign"
            android:layout_width="245dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundbutton_navy"
            android:backgroundTint="#45494A"
            android:fontFamily="@font/notosans_bold"
            android:text="회원가입하기"
            android:textSize="15dp"
            android:textColor="@color/white" />

</LinearLayout>